.hero_inner{min-height:100vh;display:flex;flex-direction:row;align-items:center;justify-content:start}.hero_content{flex-grow:2;padding-left:5px}.wrapper{margin-left:auto;margin-right:auto;padding-left:calc(1rem + (8 - 1) * ((100vw - 5em)/(50 - 5)));padding-right:calc(1rem + (8 - 1) * ((100vw - 5rem)/(50 - 5)))}.wrapper-lg{max-width:95rem}.greeting{display:inline-block;font-family:dancing script,cursive;font-size:1.4em;transform:rotate(-5deg);transform-origin:bottom left}body{font-family:be vietnam pro,sans-serif;font-weight:200;background-color:#00f5d4;color:#404040}.hero_heading{font-family:'be vietnam pro ',sans-serif;font-weight:900;font-size:3em;margin-top:.1em}